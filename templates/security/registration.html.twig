{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription sur le site</h1>
    {{ form_start(form) }}
    {{ form_row(form.username, {
        'label': "Nom d'utilisateur",
        'attr': {
            'placeholder': "Entrer nom d'utilisateur..."
        }
    }) }}
    {{ form_row(form.email, {
        'label': "Email",
        'attr': {
            'placeholder': "Entrer votre addresse mail..."
        }
    }) }}
    {{ form_row(form.password, {
        'label': "Mots de passe",
        'attr': {
            'placeholder': "Entrer votre mots de passe..."
        }
    }) }}
    {{ form_row(form.confirm_password, {
        'label': "Confirmer Mots de passe",
        'attr': {
            'placeholder': "Confirmer votre mots de passe..."
        }
    }) }}
    <button type="submit" class="btn btn-primary">Inscription !</button>
    {{ form_end(form) }}
{% endblock %}