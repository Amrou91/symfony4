{% extends 'base.html.twig' %}

{% block body %}
    <h1>Page d'inscription sur le block</h1>
    {{form_start(form)}}
    {{form_row(form.email,{
        'label':"Adresse Mail",
        'attr':{
            'placeholder':"Votre adresse email"
        }
    })}}
    {{ form_row(form.username,{
        'label':"VOtre pseudo",
        'attr':{
            'placeholder':"Entrer votre login"
        }
    })}}
    {{ form_row(form.password,{
        'label':"VOtre mots de passe",
        'attr':{
            'placeholder':"Entrer votre mots de passe..."
        }
    })}}
    {{ form_row(form.confirm_password,{
        'label':"Confirmer votre mots de passe",
        'attr':{
            'placeholder':"Confirmer votre mots de passe..."
        }
    })}}
    <button type="submit" class="btn btn-success">Inscription !</button>
    {{form_end(form)}}
{% endblock %}