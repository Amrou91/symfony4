{% extends 'base.html.twig' %}

{% block body %}
    <h1>Formulaire de connexion</h1>
    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input type="text" name="_username" required="required" class="form-control" placeholder="Adresse mail">
        </div>
        <div class="form-group">
            <input type="password" name="_password" required="required" class="form-control" placeholder="Mots de passe">
        </div>
        <button type="submit" class="btn btn-success">Connexion !</button>
    </form>
{% endblock %}