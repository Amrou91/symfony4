{# heritier du template de base #}
{% extends 'base.html.twig' %}
{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{# ettendre le block body #}
{% block body %}
    <h1>Creation d'un article</h1>
    {# debut du formulaire #}
    {{ form_start(formArticle)}}
    {# corps du formulaire #}
    {{ form_row(formArticle.title,{
        'attr':{
            'placeholder':"Titre de l'article"
        }
    }) }}
    {{ form_row(formArticle.category) }}
    {{ form_row(formArticle.content,{
        'attr':{
            'placeholder':"Contenu de l'article"
        }
    }) }}
    {{ form_row(formArticle.image,{
        'attr':{
            'placeholder':"Url de l'image"
        }
    }) }}
    <button type="submit" class="btn btn-outline-primary">
        {% if editMod %}
            Enresistrer Modification
        {% else %}
            Ajouter Article
        {% endif %}
        </button>
    {# fin du formulaire #}
    {{ form_end(formArticle) }}
{% endblock %}